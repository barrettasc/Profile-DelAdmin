## Use Case: PF - Base

PING_IDENTITY_ACCEPT_EULA=YES

# Password used by PF to talk to PD (Default with Baseline PD is 2FederateMore)
PF_USER_PWD=2FederateM0re

# PF Logging Level
PF_LOG_LEVEL=INFO

# PD User Base DN (PD Baseline is `dc=example,dc=com`)
USER_BASE_DN=dc=example.com

#####

## Use Case: Delegated Admin

# Delegated Admin app CORS 
DELEGATOR_CORS_URL=http://ext-docker.cpricelab.com

# PF details for the Delegated Admin OIDC app
# PF_HOST && PF_PORT are used to construct the allowed `Issuer` of the id_token
# Delegator will prepend "https://", you only need the port if if it's not `:443`
PF_HOST=ext-docker.cpricelab.com
PF_PORT=9031
PF_CLIENT_ID=PingLogon

# PD details for Delegator API calls
PD_HOST=int-docker.cpricelab.com
PD_PORT=2443

# Base Hostname of the PingFed service being used for Delegated Admin
PF_BASE_HOST=ext-docker.cpricelab.com
